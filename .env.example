# ============================================
# SECURITY NEXUS - Environment Variables
# ============================================
# Copy this file to .env and fill in your values
# NEVER commit .env to git (already in .gitignore)

# ============================================
# SERVER CONFIGURATION
# ============================================

# Your server's public IP address (when not using domain)
# Example: 142.93.123.45
SERVER_IP=your.server.ip.here

# Your domain name (leave empty if using IP only)
# Example: security-nexus.io
DOMAIN=

# Protocol (http for IP-only setup, https when you have SSL)
PROTOCOL=http

# ============================================
# POLKADOT/SUBSTRATE CONFIGURATION
# ============================================

# WebSocket endpoint for blockchain connection
# Options:
#   - Polkadot: wss://polkadot.api.onfinality.io/public-ws
#   - Kusama: wss://kusama.api.onfinality.io/public-ws
#   - Local node: ws://127.0.0.1:9944
WS_ENDPOINT=wss://polkadot.api.onfinality.io/public-ws

# Chain name (Polkadot, Kusama, Rococo, etc.)
CHAIN_NAME=Polkadot

# ============================================
# MONITORING ENGINE CONFIGURATION
# ============================================

# Port for the monitoring engine API
API_PORT=8080

# Rust logging level
# Options: error, warn, info, debug, trace
RUST_LOG=monitoring_engine=info

# CORS allowed origin
# Use your SERVER_IP or DOMAIN here
# Examples:
#   - With IP: http://142.93.123.45
#   - With domain: https://security-nexus.io
ALLOWED_ORIGIN=http://localhost:3000

# ============================================
# WEB DASHBOARD CONFIGURATION
# ============================================

# Internal URL for monitoring engine (Docker network)
# Keep as-is unless you change service names in docker-compose.yml
MONITORING_ENGINE_URL=http://monitoring-engine:8080

# Public API URL (what users' browsers will use)
# Should match ALLOWED_ORIGIN
# Examples:
#   - With IP: http://142.93.123.45
#   - With domain: https://security-nexus.io
NEXT_PUBLIC_API_URL=http://localhost:3000

# Node environment
NODE_ENV=production

# ============================================
# SSL/HTTPS CONFIGURATION
# ============================================

# Set to "true" to enable HTTPS with self-signed certificates
# Set to "false" for HTTP only
SSL_ENABLED=false

# Email for Let's Encrypt (when you have a domain)
# Leave empty if using self-signed certificates
SSL_EMAIL=

# ============================================
# OPTIONAL: ADVANCED CONFIGURATION
# ============================================

# Rate limiting for API (requests per second)
RATE_LIMIT_API=10

# Rate limiting for dashboard (requests per second)
RATE_LIMIT_DASHBOARD=30

# Maximum upload file size (for SAFT analysis)
MAX_FILE_SIZE_MB=10

# ============================================
# DOCKER CONFIGURATION
# ============================================

# Docker Compose project name
COMPOSE_PROJECT_NAME=security-nexus

# ============================================
# GITHUB ACTIONS (CI/CD)
# ============================================
# These should be set as GitHub Secrets, not in .env

# DOCKERHUB_USERNAME=your-dockerhub-username
# DOCKERHUB_TOKEN=your-dockerhub-access-token
# DIGITALOCEAN_SSH_KEY=your-private-ssh-key
# DIGITALOCEAN_HOST=your.server.ip.here
# DIGITALOCEAN_USER=root
